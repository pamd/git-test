<!--
    File path on Windows:
      <username>/AppData/Roaming/Kodi/userdata/keymaps/keyboard.xml
    File path on Linux:
      ~/.kodi/userdata/keymaps/keyboard.xml
-->

<keymap>
  <global>
    <keyboard>
	  <numpaddivide>togglefullscreen</numpaddivide>
    </keyboard>
  </global>
</keymap>

<!--
    Another option: <numpadtimes>
    Ref: http://kodi.wiki/view/List_of_Kodi_keynames
